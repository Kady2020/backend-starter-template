{
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.editor.restoreViewState": true,
  "workbench.tree.indent": 18,
  "workbench.tree.renderIndentGuides": "always",
  "breadcrumbs.enabled": true,
  "update.mode": "manual",
  "telemetry.telemetryLevel": "off",
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "material-product-icons",
  "workbench.colorCustomizations": {
    "editorLineNumber.foreground": "#666666",
    "editorLineNumber.activeForeground": "#FAEBD7"
  },
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 18,
  "editor.lineHeight": 24,
  "editor.letterSpacing": 0.8,
  "editor.fontLigatures": true,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  "editor.tabSize": 2,
  "editor.mouseWheelZoom": false,
  "window.zoomLevel": 0.2,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.inlineSuggest.enabled": true,
  "editor.hover.enabled": "off", // Включить подсказки при наведении (VS Code)
  // "editor.hover.enabled": false, // Включить подсказки при наведении (Cursor)
  "editor.minimap.enabled": false,
  "editor.minimap.scale": 2,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "terminal.integrated.fontFamily": "JetBrains Mono",
  "terminal.integrated.fontSize": 18,
  "files.autoSave": "onWindowChange",
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "cursor.composer.textSizeScale": 1.15,
  "cursor.composer.usageSummaryDisplay": "always",
  "cursor.terminal.usePreviewBox": true,
  "cursor.cpp.enablePartialAccepts": true,
  // Расширения
  // autopep8 / Black
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8", // Форматтер по умолчанию: "ms-python.autopep8" / "ms-python.black-formatter"
    "editor.formatOnType": false, // Форматировать во время ввода: true / false
    "editor.insertSpaces": true, // Использовать пробелы вместо табов: true / false
    "editor.tabSize": 4, // Размер табуляции
    "editor.rulers": [
      {
        "column": 88, // Лимит макс. длины строки (не влияет на форматирование)
        "color": "#666666" // Цвет линии максимальной длины строки
      }
    ],
    "editor.codeActionsOnSave": {
      // "source.organizeImports": "explicit", // Упорядочть импорты при явном сохранении: true / false / "explicit"
      // "source.fixAll": "explicit" // Применить автофиксы при явном сохранении: true / false / "explicit"
    }
  },
  // Аргументы запуска autopep8 / Black:
  "black-formatter.args": [
    "--line-length", // Лимит макс. длины строки (влияет на форматирование)
    "88"
  ],
  // Python Indent:
  "pythonIndent.trimLinesWithOnlyWhitespace": true, // Удалить строки, содержащие только пробелы: true / false
  // Indent Rainbow:
  "indentRainbow.includedLanguages": [
    "python" // Подсветка отступов для Python
  ],
  // eCSStractor:
  "ecsstractor_port.bem_nesting": true, // Включить вложенность BEM: true / false
  // Codex
  "chatgpt.commentCodeLensEnabled": false // Включить CodeLens-комментарии от расширения ChatGPT над кодом
}
